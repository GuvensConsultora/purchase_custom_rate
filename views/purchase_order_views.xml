<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Por qué: Agregar campos de tipo de cambio manual en formulario de compra
        Patrón: XPath inheritance - extendemos vista existente sin reescribirla
    -->
    <record id="view_purchase_order_form_inherit_custom_rate" model="ir.ui.view">
        <field name="name">purchase.order.form.custom.rate</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Por qué: Colocar campos junto a currency_id para agrupación lógica -->
            <xpath expr="//field[@name='currency_id']" position="after">

                <!-- Por qué: Checkbox para activar/desactivar tipo de cambio manual -->
                <field name="use_custom_rate"
                       widget="boolean_toggle"
                       string="Tipo de Cambio Manual"/>

                <!--
                    Por qué: Campo SIEMPRE visible mostrando tasa del sistema
                    Tip: readonly hace que solo sea editable cuando use_custom_rate=True
                    Patrón: Transparencia - usuario siempre ve la tasa aplicada
                -->
                <field name="custom_currency_rate"
                       readonly="not use_custom_rate"
                       required="1"
                       string="Tasa"/>

            </xpath>

        </field>
    </record>

    <!--
        Por qué: Agregar los mismos campos en facturas de proveedor
        Patrón: Reutilización de estructura para consistencia UX
    -->
    <record id="view_account_move_form_inherit_custom_rate" model="ir.ui.view">
        <field name="name">account.move.form.custom.rate</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!--
                Por qué: Posicionar campos antes del tipo de documento para mejor UX
                Patrón: Agrupación lógica de campos relacionados con moneda
            -->
            <xpath expr="//field[@name='l10n_latam_document_type_id']" position="before">

                <!--
                    Por qué: Declarar purchase_id invisible para usarlo en modifiers
                    Tip: Campos con grupos restringidos deben declararse en vista
                -->
                <field name="purchase_id" invisible="1"/>

                <field name="use_custom_rate"
                       widget="boolean_toggle"
                       string="Tipo de Cambio Manual"
                       invisible="move_type not in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"/>

                <!--
                    Por qué: Campo SIEMPRE visible mostrando tasa
                    Tip: readonly cuando viene de presupuesto O cuando no está activado use_custom_rate
                    Patrón: Transparencia total del tipo de cambio aplicado
                -->
                <field name="custom_currency_rate"
                       readonly="purchase_id or not use_custom_rate"
                       required="move_type in ['in_invoice', 'in_refund', 'out_invoice', 'out_refund']"
                       string="Tasa"/>

            </xpath>

        </field>
    </record>

</odoo>
