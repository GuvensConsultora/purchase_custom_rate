<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Por qué: Agregar campos de tipo de cambio manual en formulario de compra
        Patrón: XPath inheritance - extendemos vista existente sin reescribirla
    -->
    <record id="view_purchase_order_form_inherit_custom_rate" model="ir.ui.view">
        <field name="name">purchase.order.form.custom.rate</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- Por qué: Colocar campos junto a currency_id para agrupación lógica -->
            <xpath expr="//field[@name='currency_id']" position="after">

                <!-- Por qué: Checkbox para activar/desactivar tipo de cambio manual -->
                <field name="use_custom_rate"
                       widget="boolean_toggle"
                       string="Tipo de Cambio Manual"/>

                <!--
                    Por qué: Campo solo visible cuando se activa el checkbox
                    Tip: invisible hace que el campo se oculte dinámicamente
                    Patrón: Progressive disclosure - mostrar solo lo necesario
                -->
                <field name="custom_currency_rate"
                       invisible="not use_custom_rate"
                       required="use_custom_rate"
                       string="Tasa"/>

            </xpath>

        </field>
    </record>

    <!--
        Por qué: Agregar los mismos campos en facturas de proveedor
        Patrón: Reutilización de estructura para consistencia UX
    -->
    <record id="view_account_move_form_inherit_custom_rate" model="ir.ui.view">
        <field name="name">account.move.form.custom.rate</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <!-- Por qué: Mismo patrón que en purchase.order -->
            <xpath expr="//field[@name='currency_id']" position="after">

                <field name="use_custom_rate"
                       widget="boolean_toggle"
                       string="Tipo de Cambio Manual"
                       invisible="move_type not in ['in_invoice', 'in_refund']"/>

                <!--
                    Por qué: readonly cuando viene de purchase (para evitar inconsistencias)
                    Tip: purchase_id se llena automáticamente si viene de presupuesto
                -->
                <field name="custom_currency_rate"
                       invisible="not use_custom_rate or move_type not in ['in_invoice', 'in_refund']"
                       readonly="purchase_id"
                       required="use_custom_rate and move_type in ['in_invoice', 'in_refund']"
                       string="Tasa"/>

            </xpath>

        </field>
    </record>

</odoo>
